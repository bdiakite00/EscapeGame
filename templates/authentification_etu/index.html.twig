    <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
</head>
{% endblock %}

{% block body %}
    <h1> Authentification </h1>

    <div class="container">
        <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
            <div class="card-header">Inscription</div>
            <div class="card-body">
                <form class="form-signin">
                    {{ form_start (form) }}

                    {{ form_row (form.groupenumber, {'label': 'Numero de groupe', 'attr':
                        {'placeholder': 'Numero de groupe' } } ) }}
                    {{ form_row (form.email, {'label': 'Adresse email', 'attr':
                        {'placeholder': 'Adresse email' } } ) }}

                    {{ form_row (form.password, {'label': 'Mot de passe', 'attr':
                        {'placeholder': 'Mot de passe' } } ) }}

                    {{ form_row (form.confirm_password, {'label': 'Confirmez votre mot de passe', 'attr':
                        {'placeholder': 'Rep√©tez votre mot de passe' } } ) }}

                    <a href="#" class="card-link">s'inscrire</a>
                    <a href="#" class="card-link">se connecter</a>

                    {{ form_end (form) }}
                </form>
            </div>
            </div>
    </div>



{% endblock %}
